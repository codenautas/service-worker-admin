{
    "compilerOptions": {
        "inlineSourceMap": true,
        "inlineSources": true,
        "target": "es2018",
        "skipLibCheck": true, //para que no haga chequeo de tipos en los declaration files dentro de node-modules(pg-promise-strict, express, node)
        "typeRoots" : ["../node_modules/@types", "../node_modules/types.d.ts/modules"],
        "noImplicitAny": true,
        "noUnusedLocals": false, /* noUnusedLocals  */
        "noUnusedParameters": true,
        "noImplicitReturns": true, /* Report error when not all code paths in function return a value. */
        "noFallthroughCasesInSwitch": true,
        "outDir": "dist",
        "alwaysStrict": true,
        "allowUnreachableCode": false,
        "strict": true,
        "moduleResolution": "node",
        "declaration": true,
        "module": "umd",
        "lib": [
            "dom", "es5", "es2015"
        ]
    },
    "include":[
        "src/*.ts"
    ],
}